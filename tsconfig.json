{
  "compilerOptions": {
    "target": "ES6", 
    "module": "commonjs", 
    "rootDir": "./src", 
    "outDir": "./dist", 
    "strict": true, 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true, 
    "noImplicitAny": true, 
    "resolveJsonModule": true,
    "sourceMap": true,
    "moduleResolution": "node", 
    "typeRoots": ["./node_modules/@types"], 
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules"]
}
